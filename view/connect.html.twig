{% extends "template.html.twig" %}

{% block header %}
	{% include 'header.html.twig' with {'categories' : cats } %}
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="{{ asset('/css/connect.css') }}">
{% endblock %}


{% block content %}

	{# {% if message %}
	<p>{{ message }}</p> #}

	<div class="cont">
		<div id="sign-in" class="form">

			<h2>Ravi de vous revoir,</h2>

			<form action="{{ login }}" method="POST">
				<label for="username">
					<span>PSEUDO</span>
				</label>
				<input name="username" type="text"/>

				<label for="password">
					<span>MOT DE PASSE</span>
				</label>
				<input name="password" type="password"/>

				<a href="#">
					<p class="forgot-pass">Mot de passe oublié ?</p>
				</a>

				<button type="submit" class="submit">Se connecter</button>

				<button type="button" class="fb-btn">
					<a href="https://fr-fr.facebook.com/login/web/">Connexion avec
						<span>facebook</span>
					</a>
				</button>

				<button type="button" class="gmail-btn">
					<a href="https://www.google.com/intl/fr/gmail/about/">
						Connexion avec
						<span>Gmail</span>
					</a>
				</button>

				<button type="button" class="apple-btn">
					<a href="https://www.icloud.com/">Connexion avec
						<span>Apple</span>
					</a>
				</button>
			</form>
		</div>

		<div class="sub-cont">
			<div class="img">
				<div class="img__text m--up">
					<h2>Nouveau?</h2>
					<p>Rejoignez la team
						<br>
						GiteFinder!!!</p>
				</div>
				<div class="img__text m--in">
					<h2>Déjà inscrit?</h2>
					<p>Si vous possédez un compte!
						<br>
						C'est par ici !!</p>
				</div>
				<div class="img__btn">
					<span class="m--up">Inscription</span>
					<span class="m--in">Connexion</span>
				</div>
			</div>

			<div id="sign-up" class="form">

				<form action="{{ path('register') }}" method="POST">

					<label for="username">
						<span>PSEUDO</span>
					</label>
					<input name="username" type="text"/>


					<label for="mail">
						<span>MAIL</span>
					</label>
					<input name="mail" type="mail"/>

					<label for="password">
						<span>PASSWORD</span>
					</label>
					<input name="password" type="password"/>

					<button type="submit" class="submit">S'inscrire</button>

					<button type="button" class="fb-btn">
						<a href="https://fr-fr.facebook.com/login/web/">Connexion avec
							<span>facebook</span>
						</a>
					</button>

					<button type="button" class="gmail-btn">
						<a href="https://www.google.com/intl/fr/gmail/about/">Connexion avec
							<span>Gmail</span>
						</a>
					</button>

					<button type="button" class="apple-btn">
						<a href="https://www.icloud.com/">Connexion avec
							<span>Apple</span>
						</a>
					</button>

				</form>
			</div>
		</div>
	</div>
{% endblock %}