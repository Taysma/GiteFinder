{% extends "template.html.twig" %}

{% block title %}Your Search Results
{% endblock %}

{% block headerblock %}{% include 'header.html.twig' with {'categories' : cats } %}{% endblock %}


{% block content %}

<section>
<h2>Search Results</h2>
			<ul>
				{% for recipe in recipes %}
					<div id="recipe-card">
						<li>
							<a href="{{ oneRecipe }}{{ recipe.id }}">{{ recipe.title }}</a>
						</li>
						<li>
							<p>{{ recipe.duration }}</p>
						</li>
					</div>
				{% endfor %}
			</ul>

		{% if message %}<p>{{ message }}</p>{% endif %}	

		</section>
{% endblock %}